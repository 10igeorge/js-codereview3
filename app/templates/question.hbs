<h1>{{model.title}}</h1>

<h5>By: {{model.author}}</h5>
<p>Created: {{model.date}}</p><br><br>
<p>Tag: {{model.tag}}</p>
{{model.details}}
<hr>
{{edit-question question=model editQuestion="editQuestion"}}
<button id="deleteQuestion" class="btn btn-danger btn-xs">Delete</button><br><br><hr>

{{new-answer submitAnswer="submitAnswer" question=model}}
<br><br>

{{#each model.answers as |answer|}}
  {{answer-tile answer=answer}}
  <button class="btn btn-info btn-xs">Reply</button>
  <button class="btn btn-danger btn-xs">Delete</button>
{{/each}}
