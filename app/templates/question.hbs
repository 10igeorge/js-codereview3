<h1>{{model.title}}</h1>

<h5>By: {{model.author}}</h5>
<p>Created: {{model.date}}</p><br><br>
<p>Tag: {{model.tag}}</p>
{{model.details}}
<hr>
{{edit-question question=model editQuestion="editQuestion"}}
<button id="delete" class="btn btn-danger btn-xs" {{action 'deleteQuestion' model}}>Delete</button><br><br><hr>

{{new-answer submitAnswer="submitAnswer" question=model}}
<br><br>

{{#each model.answers as |answer|}}
  {{answer-tile questionId=answer.question.id answer=answer}}
  <button id="reply" class="btn btn-info btn-xs">Reply</button>
  <button id="delete" class="btn btn-danger btn-xs" {{action 'deleteAnswer' answer}}>Delete</button><br><hr>
{{/each}}
