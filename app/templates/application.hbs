<div class="wrapper">
  <header>
    <div class="jumbotron">
      {{#link-to 'index'}}<img class="header" src="/assets/images/qanda.jpg">{{/link-to}}
    </div>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          {{#link-to 'index'}}<a class="navbar-brand" href="#"><span class="logo">Nahoo Answers</span></a>{{/link-to}}
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <li>{{#link-to 'about'}}About<span class="sr-only">(current)</span>{{/link-to}}</li>
            <li>{{#link-to 'contact'}}Contact Us{{/link-to}}</li>
            {{#bs-dropdown tagName="li"}}
              {{#bs-dropdown-toggle}}Categories<span class="caret"></span>{{/bs-dropdown-toggle}}
              {{#bs-dropdown-menu}}
                <li>{{#link-to 'psychology'}}Psychology{{/link-to}}</li>
                <li>{{#link-to 'entertainment'}}Entertainment{{/link-to}}</li>
                <li>{{#link-to 'politics'}}Politics &amp; Government{{/link-to}}</li>
                <li>{{#link-to 'sports'}}Sports{{/link-to}}</li>
                <li>{{#link-to 'health'}}Health &amp; Fitness{{/link-to}}</li>
                <li>{{#link-to 'science'}}Science &amp; Mathematics{{/link-to}}</li>
                <li>{{#link-to 'beauty'}}Beauty &amp; Style{{/link-to}}</li>
                <li>{{#link-to 'misc'}}Miscellaneous{{/link-to}}</li>
              {{/bs-dropdown-menu}}
            {{/bs-dropdown}}
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
      {{outlet}}
    <footer id="footer-wrapper">
      <div class="copyright">
        &copy; 2016 Izzy George
      </div>
    </footer>
  </div>
</div>
