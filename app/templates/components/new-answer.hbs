{{#if newAnswerForm}}
    <div>
      <form>
        <div class="form-group">
          <label for="name">Your Name:</label><br>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="body">Answer:</label><br>
          {{textarea value=body id="body" cols="60" rows="10"}}
        </div>
        <button class="btn btn-primary btn-sm" {{action 'submitAnswer'}}>Submit</button><br><br><hr>
      </form>
    </div>
{{else}}
    <button class="btn btn-sm btn-success btn-xs" {{action 'showAnswerForm'}}>Answer Question</button>
{{/if}}
